<div class="px-4 md:p-0">
  <div class="my-4">
    <%= image_tag @article.cover_picture.variant(resize_to_limit: [700, 300]) %>
  </div>
  <h1 class="text-2xl md:text-3xl leading-none font-semibold mb-2 md:mb-0 md:leading-normal"><%= @article.title %></h1>
  <p><%= format_date(@article.published_at) %></p>
  <hr class="border-gray-500 my-4">
  <%= @article.content %>
</div>
