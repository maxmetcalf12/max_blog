<div class="flex flex-col w-full my-8 px-4 md:px-0">
  <div class="text-3xl mb-2 md:text-5xl md:mb-0 relative flex">
    <span class="md:absolute md:-ml-16 mr-4">📝</span>
    <h1>Articles</h1>
  </div>
  <p class="text-lg leading-tight md:leading-normal">
    List of articles I have written on varying subjects. Could be anything from
    politics to business ideas to religion.
  </p>
</div>
<div class="flex flex-col w-full my-8 px-4 md:px-0">
  <% @articles.each do |article| %>
    <%= link_to article do %>
      <div class="Card">
        <h2 class="text-xl"><%= article.title %></h2>
        <p class="text-sm text-gray-500"><%= article.published_at.strftime("%B %e, %Y") %></p>
        <%= article.preview %>
      </div>
    <% end %>
  <% end %>
</div>
