<div class="flex flex-wrap w-full justify-around items-center my-4 px-12 md:flex-no-wrap md:px-0">
  <div class="order-2 md:order-1 w-full text-center md:text-left">
    <div class="text-4xl md:text-4xl relative leading-tight">
      <span class="absolute hidden md:inline md:-ml-12">👋🏼</span>
      <h1>Hey, I'm Max Metcalf.</h1>
    </div>
    <h2 class="text-2xl">Welcome to my blog.</h2>
  </div>
  <div class="order-1">
    <div class="w-56">
      <%= image_tag "maxmoji_computer.png" %>
    </div>
  </div>
</div>
<div class="flex flex-col w-full my-8 px-4 md:px-0">
  <div class="text-3xl md:text-2xl relative my-2 flex md:block items-center">
    <span class="md:absolute mr-4 md:-ml-8">📚</span>
    <h2>Articles</h2>
  </div>
  <% @articles.each do |article| %>
    <%= link_to article do %>
      <div class="Card">
        <h2 class="text-xl"><%= article.title %></h2>
        <p class="text-sm text-gray-500"><%= article.published_at.strftime("%B %e, %Y") %></p>
        <%= article.preview %>
      </div>
    <% end %>
  <% end %>
</div>
<div class="flex flex-col w-full my-8 px-4 md:px-0">
  <div class="text-3xl md:text-2xl relative my-2 flex md:block items-center">
    <span class="md:absolute mr-4 md:-ml-8">🔬</span>
    <h2>Product Reviews</h2>
  </div>
  <% @product_reviews.each do |product_review| %>
    <%= link_to product_review do %>
      <div class="Card">
        <h2 class="text-xl"><%= product_review.name %></h2>
        <p class="text-sm text-gray-500"><%= product_review.published_at.strftime("%B %e, %Y") %></p>
        <%= product_review.preview %>
      </div>
    <% end %>
  <% end %>
</div>
<div class="flex flex-col w-full my-8 px-4 md:px-0">
  <div class="text-3xl md:text-2xl relative my-2 flex md:block items-center">
    <span class="md:absolute mr-4 md:-ml-8">🤖</span>
    <h2>Code Tutorials</h2>
  </div>
  <% @code_tutorials.each do |code_tutorial| %>
    <%= link_to code_tutorial do %>
      <div class="Card">
        <h2 class="text-xl"><%= code_tutorial.name %></h2>
        <p class="text-sm text-gray-500"><%= code_tutorial.published_at.strftime("%B %e, %Y") %></p>
        <%= code_tutorial.preview %>
      </div>
    <% end %>
  <% end %>
</div>
